pipeline {
    agent any

    stages {
        stage('run frontend') {
            steps {
                echo 'executing yarn..'
                echo $PWD
                nodejs('Node10-17'){
                    sh 'yarn install'
                }
            }
        }
        stage('run backend') {
            steps {
                echo 'executing gradle..'
                withGradle() {
                    sh '${JENKINS_HOME}/gradlew -v'
                }
            }
        }
    }
}
