pipeline {
    agent any
    
    tools {
        gradle 'gradle'
    }

    stages {
        stage('run frontend') {
            steps {
                echo 'executing yarn..'
                nodejs('Node10-17'){
                    sh 'yarn install'
                    sh 'yarn build' 
                }
            }
        }
        stage('run backend') {
            steps {
                echo 'executing gradle..'
                sh './gradlew -v'
               
            }
        }
    }
}
